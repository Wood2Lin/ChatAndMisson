<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ink</item>
        <item name="colorPrimaryDark">@color/ink</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="ColorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/blue_green</item>
        <item name="colorAccent">@color/fly_red</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 彩色hint-->
    <style name="AppThemeColorfulHint" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ink</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
    </style>
    <style name="AppThemeColorfulHint.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ColorTheme.NoActionBarWithWhiteNavi">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Widget.MaterialSheetFab.Fab" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
        <item name="android:src">@mipmap/ic_launcher</item>
        <item name="fabSize">normal</item>
        <item name="borderWidth">5dp</item>
    </style>

    <style name="anim_menu_bottom">
        <item name="android:windowEnterAnimation">@anim/bottom_pop_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_pop_out</item>
    </style>

    <style name="request_item_text_style">
        <item name="android:padding">10dp</item>
    </style>
</resources>
